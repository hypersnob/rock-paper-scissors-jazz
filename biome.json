{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "noAriaUnsupportedElements": "warn",
        "noDistractingElements": "warn",
        "noRedundantAlt": "error",
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "useValidAnchor": "warn",
        "noStaticElementInteractions": "warn"
      },
      "complexity": {
        "recommended": true,
        "noBannedTypes": "warn",
        "noForEach": "warn"
      },
      "correctness": {
        "recommended": true,
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "security": {
        "recommended": true,
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "recommended": true,
        "noNegationElse": "off",
        "useConst": "error",
        "useExportType": "error",
        "useImportType": "error",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "recommended": true,
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "error",
        "noConsole": "warn",
        "noEmptyInterface": "error",
        "noExplicitAny": "warn",
        "noThenProperty": "warn",
        "noUnsafeNegation": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "css": {
    "parser": {
      "allowWrongLineComments": true,
      "cssModules": false,
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!node_modules",
      "!dist",
      "!build",
      "!.next",
      "!coverage",
      "!**/*.min.js",
      "!playwright-report",
      "!test-results",
      "!pnpm-lock.yaml"
    ]
  }
}
